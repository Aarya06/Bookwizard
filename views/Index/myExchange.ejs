	
	<%if(exchange && exchange.length > 0){ %>
	
        <div class="col-lg-12 p-2 bg-white rounded shadow my-1">
		<div class="table-responsive">
            <table class="table m-0">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light text-center">
                    <div class=" px-3 text-uppercase">Book</div>
                  </th>
                  <th scope="col" class="border-0 bg-light text-center">
                    <div class=" px-0 text-uppercase"></div>
                  </th>
                  <th scope="col" class="border-0 bg-light text-center">
                    <div class=" px-3 text-uppercase">Exchange with</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class=" text-uppercase">View</div>
                  </th>
                  
                  <th scope="col" class="border-0 bg-light">
                    <div class=" text-uppercase">Remove</div>
                  </th>
                </tr>
              </thead>
              <tbody>
				  <% exchange.forEach(function(exchange){ %>
                <tr class="border-bottom">
                  <th scope="row" class="border-0 p-0 text-center" style="max-width:140px;">
                    <div class="p-2" >
                      <img src="<%=exchange.b1_Image%>"  class="img-fluid shadow-sm" width="120">
                        <h5 class="mb-0"> <p class="text-dark d-inline-block align-middle"><%=exchange.b1_Title%></p></h5>
                    </div>
                  </th>
                  <td class="border-0 align-middle text-center px-0">
                    <img src="https://smartgantt.com/wp-content/uploads/2014/04/Two_way-data-exchange.gif" width="80" height="80 ">
                  </td>
                  <th scope="row" class="border-0 p-0 text-center " style="max-width:140px;">
                    <div class="p-2">
                      <img src="<%=exchange.b2_Image%>"  class="img-fluid shadow-sm" width="120">
                        <h5 class="mb-0"> <p class="text-dark d-inline-block align-middle"><%=exchange.b2_Title%></p></h5>
                    </div>
                  </th>
                   
                  <td class="border-0 align-middle"><a href = "/exchange/<%=exchange._id%>" class="btn btn-block btn-success">view</a></td>
                 
                  <td class="border-0 align-middle">
					<form action = "/exchange/<%=exchange._id%>?_method=DELETE" method = "POST" 
								  id ="delete-form">
								<button  class="btn btn-link"><i class="fas fa-trash "></i></button>
							</form>
					</td>
                </tr>
				    <% }) %>
              </tbody>

            </table>
          </div>
      </div>
<% }else{ %>
	<div class = "container p-5 my-2 rounded bg-grey shadow" id="order" style="background-color: #DFDFDD;">
		<center>
			<img src = "/images/exchange.jpg" height = "250px">
			<div class = "mt-5">
				<a href="/books" class="btn btn-primary rounded-pill px-5">Post Now</a>
			</div>
			
		</center>
	</div>
	<% } %>
