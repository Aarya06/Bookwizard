
<%- include("../partials/top") %>
<body>
	<%- include("../partials/header") %>
	
	<div class="container mt-5">
		
		<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark jumbotronExchange">
			<center>
			<div class="col-lg-8 col-sm-12 px-0">
				<h1 class="display-4 font-italic">Exchange portal</h1>
				<p class="lead my-3">
					We provide a platform to connect with people by exchanging books.
				</p>
				<a href = "/exchange/new" class="btn btn-info btn-lg">Post an exchange</a>
			</div>
			</center>
		</div> 
		<form action = "/searchExchange" method = "POST">
			<div class="form-row mb-4 d-flex justify-content-center">
				<div class="col-sm-10">
					<input type="text" class="form-control" name = "exchangename" placeholder="Search By Book You Have" required>
			    </div>
			    <button class="btn btn-dark btn-md">Search</button>
			</div>
		</form>
		<% if(exchange && exchange.length > 0){ %>
		<div class="row">
			<% exchange.forEach(function(exchange){ %>
			<div class="col-lg-6 d-flex justify-content-center">
				<div class="card mb-3 border-0" style="max-width: 400px;">
					<div class="row d-flex justify-content-center ">
						<div class="col-md-4 px-0">
							<img src="<%=exchange.b1_Image%>" class="card-img">
							<h6 class="mb-0"><%=exchange.b1_Title%></h6>
							<p class="text-muted my-0"><%=exchange.b1_Author%></p>
						</div>
						
						<div class="col-md-3 d-flex justify-content-center mx-2">
							<div>
								<img src="https://smartgantt.com/wp-content/uploads/2014/04/Two_way-data-exchange.gif" width="100" height="100 " class="mt-5">
								<div class="text-center mt-3">
									<a href = "/exchange/<%=exchange._id%>" class="btn btn-sm btn-success">View Detail</a>
								</div>

							</div>
						</div>
						
						<div class="col-md-4 px-0">
							<img src="<%=exchange.b2_Image%>" class="card-img" alt="...">
							<h6 class="mb-0"><%=exchange.b2_Title%></h6>
							<p class="text-muted my-0"><%=exchange.b1_Author%></p>
						</div>
					</div>
				</div>
			</div>
			<% }) %>
			
		</div>
		<% }else{ %>
		<center>
			<img src = "/images/no-resultfound.jpg" class = "img-fluid">
		</center>
		<% } %>
	</div>
	
	
	
	<%- include("../partials/footer") %>