<%- include("../partials/top") %>
<body>
	<%- include("../partials/header") %>
	
	<div class="container mt-5">
		<div class="row">
			<div class="col-sm-11 col-lg-9 ml-auto">
				<div class="card mb-3 border-0">
					<div class="row d-flex justify-content-center "style = "max-width: 540px">
						<div class="col-sm-4 px-0"> 
							<img src="<%=exchange.b1_Image%>" class="card-img">
							<h5 class="mb-0"><%=exchange.b1_Title%></h5>
							<p class="text-muted my-0"><%=exchange.b1_Author%></p>
						</div>
						
						<div class="col-sm-4 d-flex justify-content-center mt-4">
							<div>
								<img src="https://smartgantt.com/wp-content/uploads/2014/04/Two_way-data-exchange.gif" width="100" height="100 " class="mt-5">
								<p class = "text-center text-muted mt-2">
									posted on<br><%=exchange.created.toDateString()%>
								</p>
								<% if(currentUser && ((currentUser.username === "bookwizard.net@gmail.com")||(exchange.postedBy.id.equals(currentUser._id)))){ %>
								<div class="text-center mt-3">
									<a href = "/exchange/<%=exchange._id%>/edit"><i class="fas fa-pen btn btn-warning"></i></a>
									<form action = "/exchange/<%=exchange._id%>?_method=DELETE" method = "POST" 
								  id ="delete-form">
								<button  class="btn btn-danger btn-sm"><i class="fas fa-trash "></i></button>
							</form>
								</div>
								<% } %>

							</div>
						</div>
						
						<div class="col-sm-4 px-0">
							<img src="<%=exchange.b2_Image%>" class="card-img" alt="...">
							<h5 class="mb-0"><%=exchange.b2_Title%></h5>
							<p class="text-muted my-0"><%=exchange.b1_Author%></p>
						</div>
					</div>
				</div>
				
			</div>
				<div class="col-sm-11 col-lg-9 my-2 ml-auto">
					<span class="h5">Name:</span><span style="font-size: 20px"><%=exchange.postedBy.firstname%> <%=exchange.postedBy.lastname%></span>
				</div>
				<div class="col-sm-11 col-lg-9 my-2 ml-auto">
					<span class="h5">contact:</span><span style="font-size: 20px"><%=exchange.contact%></span>
				</div>
			    <div class="col-sm-11 col-lg-9 my-2 ml-auto pr-5">
					<span class="h5">Meeting Location:</span><span style="font-size: 20px"><%=exchange.address%></span>
				</div>
		</div>
	</div>
	
	<%- include("../partials/footer") %>