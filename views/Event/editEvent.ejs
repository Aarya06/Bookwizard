<%- include("../partials/top") %>
<body>
	<%- include("../partials/header") %>
	
	<div class="container my-5 col-lg-6">
		<form action = "/events/<%=event._id%>?_method=PUT" method = "POST">
			<div class = "row">
				<div class="form-group col-lg-6">
					<label for="formGroupExampleInput">Title</label>
					<input type="text" class="form-control" name="event[title]" value="<%=event.title%>" required>
				</div>
				
				<div class="form-group col-lg-6">
					<label for="formGroupExampleInput2">Date</label>
					<input type="date" class="form-control" name="event[date]" value="<%=event.date%>" required>
				</div>
				
				<div class="form-group col-lg-6">
					<label for="formGroupExampleInput2">Location</label>
					<input type="text" class="form-control" name="event[location]" value="<%=event.location%>" required>
				</div>
				
				<div class="form-group col-lg-6">
					<label for="formGroupExampleInput2">Image url</label>
					<input type="text" class="form-control" name="event[image]" value="<%=event.image%>" required>
				</div>
			</div>
			
			<div class="form-group">
			    <label for="formGroupExampleInput2">Event Link</label>
			    <input type="text" class="form-control" name="event[link]" value="<%=event.link%>" required>
			</div>
			 <div class="form-group">
				<label for="exampleFormControlTextarea1">Description</label>
				<textarea class="form-control" name="event[body]" rows="4" required><%=event.body%></textarea>
				 <script>
					 var editor = CKEDITOR.replace( 'event[body]' );
					 editor.on( 'required', function( evt ) {
						 alert( 'Description content is required.' );
						 evt.cancel();
					 });
				</script>
  			</div>
			<button type="submit" class="btn btn-primary btn-block">Submit</button>
		</form>
	</div>
	
	<%- include("../partials/footer") %>
