
<%- include("../partials/top") %>
<body id="blog_event">
	
	<%- include("../partials/header") %>
	<div class="container">
		
		<div class="row text-center text-white mb-3">
			<div class="col-lg-8 mx-auto">
				<h1 class="display-4">Blog timeline</h1>
				<a href="/blogs/addBlog" class="btn btn-info btn-lg rounded-pill my-1 py-2 px-5">
					<i class="fas fa-keyboard"></i> WRITE YOUR OWN BLOG
				</a>
			</div>
		</div>
		
		<div class="row">
			<div class="col-lg-9 mx-auto">
				<ul class="timeline">
					<% blogs.forEach(function(blog){ %>
					<li class="timeline-item bg-white rounded ml-3 p-4 shadow">
						<div class="timeline-arrow"></div>
						<div class="row">
							<div class="col px-4 d-flex flex-column position-static">
								<strong class="d-inline-block mb-2 text-primary">
									<%=blog.category%>
								</strong>
								<h3 class="mb-0"><%=blog.title%></h3>
								<span class="mb-1 text-muted">
									<i class="far fa-calendar-alt"></i>
									 <%=blog.created.toDateString()%>
								</span>
								<div class="p-0">
									<img src="<%=blog.image%>" width="200" class="img-fluid"
										 align="right" class="p-2">
									<p class="card-text mb-auto">
										<%-blog.body.substring(0,250)%>. . . .
										<a href="/blogs/<%=blog._id%>">
											Continue reading
										</a>
									</p>
								</div>
							</div>
						</div>
					</li>
					<% }); %>
				</ul>
			</div>
		</div>
	</div>
	<%- include("../partials/footer") %>

