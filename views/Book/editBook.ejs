
<%- include("../partials/top") %>
<body>
	<%- include("../partials/header") %>
	
	<div class="container my-5 col-lg-7">
		<form action = "/books/<%=book._id%>?_method=PUT" method = "POST">
			<div class = "form-row">
				<div class="form-group col-md-6">
			    	<label for="formGroupExampleInput">Title</label>
			    	<input type="text" class="form-control" name="book[title]" value = "<%= book.title %>" required>
				</div>
				<div class="form-group col-md-6">
					<label for="formGroupExampleInput2">Author</label>
					<input type="text" class="form-control" name="book[author]" value = "<%= book.author %>" required>
				</div>
				<div class="form-group col-md-6">
					<label for="formGroupExampleInput2">Image url</label>
					<input type="text" class="form-control" name="book[image]" value = "<%= book.image %>" required>
				</div>
				<div class="form-group col-md-6">
					<label for="formGroupExampleInput2">Price</label>
					<input type="number" class="form-control" name="book[price]" value = "<%= book.price %>" required>
				</div>
				<div class="form-group col-md-6">
					<label for="formGroupExampleInput2">Category</label>
					<select class="custom-select" name="book[category]" required>
						<option value="<%=book.category%>"><%=book.category%></option>
						<option value="Biography">Biography</option>
						<option value="Comics">Comics</option>
						<option value="Fiction">Fiction</option>
						<option value="Horror">Horror</option>
						<option value="Mystery">Mystery</option>
						<option value="Romance">Romance</option>
						<option value="Thriller">Thriller</option>
					</select>
				</div>
				<div class="form-group col-md-6">
					<label for="formGroupExampleInput2">Pages</label>
					<input type="number" class="form-control" name="book[pages]" value = "<%= book.pages %>" required>
				</div>
				<div class="form-group col-md-6">
					<label for="formGroupExampleInput2">Publication</label>
					<input type="text" class="form-control" name="book[publication]" value = "<%= book.publication %>" required>
				</div>
				<div class="form-group col-md-6">
					<label for="formGroupExampleInput2">BestSeller</label>
					<select class="custom-select" name="book[bestseller]">
						<option value="<%=book.bestseller%>"><%=book.bestseller%></option>
						<option value="No">No</option>
						<option value="Yes">Yes</option>
					</select>
				</div>
				
			</div>
			<div class="form-group">
				<label for="exampleFormControlTextarea1">Description</label>
				<textarea class="form-control" name="book[description]" rows="4" required><%= book.description %></textarea>
				<script>
					var editor = CKEDITOR.replace( 'book[description]' );
					editor.on( 'required', function( evt ) {
						 alert( 'Description content is required.' );
						 evt.cancel();
					 });
				</script>
  			</div>
			<button type="submit" class="btn btn-primary btn-block">Update</button>
		</form>
	</div>
	
	<%- include("../partials/footer") %>
