
<%- include("../../partials/top") %>
<body>
	<%- include("../../partials/header") %>

	<div class = "container my-5">
		<h1 class = "text-center">Add new Comment to <%=book.title %></h1>
		<div class = "col-lg-6 my-5 mx-auto">
			<form action="/books/<%=book._id%>/comments" method="POST">
				<div class="form-group">
					<label for="comment" class="text-center">Your Comment:</label>
					<textarea class="form-control" name="comment[text]" rows="4"></textarea>
				</div>
				 <button type="submit" class="btn btn-primary btn-lg btn-block">Add</button>
			</form>
			<div class="mt-2">
				<a href = "/books/<%=book._id%>" class = "btn btn-light btn-lg btn-block">Cancel</a>
			</div>
		</div>
	</div>
	
	<%- include("../../partials/footer") %>
