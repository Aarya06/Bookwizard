
<%- include("../../partials/top") %>
<body>
	<%- include("../../partials/header") %>

	<div class = "container">
		<h1 class = "text-center">Edit Comment</h1>
		<div class = "col-lg-6 my-5 mx-auto">
			<form action="/books/<%=book_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="image url">Comment</label>
					<textarea class="form-control" name="comment[text]" rows="4"><%=comment.text%></textarea>
				</div>
				 <button type="submit" class="btn btn-primary btn-lg btn-block">Add</button>
			</form>
			<div class="mt-2">
				<a href = "/books/<%=book_id%>" class="btn btn-light btn-lg btn-block">Cancel</a>
			</div>
		</div>
	</div>

	<%- include("../../partials/footer") %>
